<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <!-- <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/> -->
            <PatternLayout pattern="%m%n"/>
        </Console>
        <File name="DEBUG" fileName="log/debug.org" append="false">
          <PatternLayout pattern="%m%n" />
        </File>
        <File name="INFO" fileName="log/info.org" append="false">
          <PatternLayout pattern="%m%n" />
        </File>
        <File name="RESULT" fileName="log/result.org" append="false">
          <PatternLayout pattern="%m%n" />
        </File>
        <File name="JSON" fileName="log/results.json" append="false">
          <PatternLayout pattern="%m%n" />
        </File>
        <File name="DETAILED_CLASSIFICATION" fileName="log/detailed_classification.csv" append="false">
          <PatternLayout pattern="%m%n" />
        </File>
     </Appenders>
    
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="STDOUT" level="warn"/>
            <AppenderRef ref="DEBUG"  level="debug"/>
            <AppenderRef ref="INFO"   level="info"/>
        </Root>
        
        <Logger name="org.androidlibid.proto.match.SetupLogger" level="info" additivity="false">
            <AppenderRef ref="RESULT"/>
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="DEBUG"/>
            <AppenderRef ref="INFO"/>
        </Logger>
        
        <Logger name="org.androidlibid.proto.match.postprocess.StatsToOrgLogger" level="info" additivity="false">
            <AppenderRef ref="RESULT"/>
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="DEBUG"/>
            <AppenderRef ref="INFO"/>
        </Logger>
        
        <Logger name="org.androidlibid.proto.match.postprocess.StatsToJsonLogger" level="info" additivity="false">
            <AppenderRef ref="JSON"/>
        </Logger>
        
        <Logger name="org.androidlibid.proto.integration.mainTest" level="info" additivity="false">
            <AppenderRef ref="RESULT"/>
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="INFO"/>
        </Logger>
        
        <Logger name="org.androidlibid.proto.match.postprocess.EvaluateResults" level="info" additivity="false">
            <AppenderRef ref="DETAILED_CLASSIFICATION"/>
        </Logger>
        
        <Logger name="org.androidlibid.proto.match.postprocess.PrintResultTable" level="info" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        
        <Logger name="org.androidlibid.proto.store.StoreFingerprintsAlgorithm" level="info" />
        
    </Loggers>
</Configuration>
